<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/newscenter_white_ffffff"
    android:clickable="true"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/newscenter_list_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text=""
        android:textColor="@color/newscenter_black_333333"
        android:textSize="17sp"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="27日起，“回乡证”“台胞证”网上购票更方便"
        />

    <TextView
        android:id="@+id/newscenter_list_item_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="12dp"
        android:text=""
        android:textColor="#999999"
        android:textSize="13sp"
        tools:text="2018-12-27"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E0E0E0"
        />

</LinearLayout>